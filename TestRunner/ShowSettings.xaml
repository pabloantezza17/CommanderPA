<Window x:Class="TestRunner.ShowSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowSettings" Height="150" Width="150" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="8,8,8,8">
            <CheckBox x:Name="showProgress">Show Progress</CheckBox>

            <Separator Margin="8,8,8,8" />

            <Button x:Name="saveSettingsBtn" Click="saveSettingsBtn_Click">Save settings</Button>
        </StackPanel>
    </Grid>
</Window>