<fwk:ObservableWindow
    x:Class="Helper.EditarDatosParaTemplater"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fwk="clr-namespace:Framework.UI;assembly=Framework"
    xmlns:avalon="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
    Title="Editar Template" WindowStartupLocation="CenterScreen" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <avalon:TextEditor x:Name="dataTemplateTxt" Grid.Row="0" Margin="8" SyntaxHighlighting="JavaScript" />
        <Button x:Name="abrirTemplater" Click="AbrirTemplater_Click" Grid.Row="1">Open Templater</Button>
    </Grid>
</fwk:ObservableWindow>